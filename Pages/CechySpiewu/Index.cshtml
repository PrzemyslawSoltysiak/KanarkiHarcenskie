@page
@model KanarkiHarcenskie.Pages.CechySpiewu.IndexModel

@{
    ViewData["Title"] = "Cechy śpiewu COM";
}

<h2>Cechy śpiewu COM</h2>

<p>
    <a asp-page="Create">Dodaj nową Cechę śpiewu COM</a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CechaSpiewuCOM[0].Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CechaSpiewuCOM[0].MaksPunktow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CechaSpiewuCOM[0].WagaPunktow)
            </th>
            <th style="width: 16ch;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CechaSpiewuCOM) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaksPunktow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WagaPunktow)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Nazwa">Edytuj</a> |
                <a asp-page="./Delete" asp-route-id="@item.Nazwa">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
