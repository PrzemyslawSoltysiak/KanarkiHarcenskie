@page
@model KanarkiHercenskie.Pages.Przesluchania.IndexModel

@{
    ViewData["Title"] = "Przesłuchania";
}

<h2>Przesłuchania</h2>

<p>
    <a asp-page="Create">Dodaj Przesłuchanie</a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                Właściciel Kolekcji
            </th>
            <th>
                Konkurs
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Przesluchanie[0].Data)
            </th>
            <th>
                Godzina rozpoczęcia
            </th>
            <th>
                Godzina zakończenia
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Przesluchanie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrzesluchiwanaKolekcja.Wlasciciel.Podsumowanie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrzesluchiwanaKolekcja.Konkurs.Podsumowanie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GodzinaOd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GodzinaDo)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edytuj</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
