@page
@model KanarkiHercenskie.Pages.Konkursy.DeleteModel

@{
    ViewData["Title"] = "Usuń Konkurs";
}

<h3 class="mt-4">Czy na pewno chcesz usunąć ten Konkurs?</h3>
<h5 class="mb-4">Usunięcie Konkursu spowoduje również usunięcie powiązanych z nim Kolekcji (oraz ich Przesłuchań).</h5>

<div>
    <h4>Konkurs</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Konkurs.ID)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Konkurs.ID)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Konkurs.Data)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Konkurs.Data)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Konkurs.Miejscowosc)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Konkurs.Miejscowosc)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Konkurs.Ranga)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Konkurs.Ranga)
        </dd>
        <dt class="col-sm-4">
            Liczba zarejestrowanych na Konkurs Kolekcji
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ZarejestrowaneKolekcje)
        </dd>
        <dt class="col-sm-4">
            Liczba zaplanowanych na Konkurs Przesłuchań
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ZaplanowanePrzesluchania)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Konkurs.ID" />
        <input type="submit" value="Usuń" class="btn btn-danger me-1" /> |
        <a asp-page="Index" class="ms-1">Powrót do listy</a>
    </form>
</div>
