@page
@model KanarkiHarcenskie.Pages.Hodowcy.EditModel

@{
    ViewData["Title"] = "Edytuj dane Hodowcy";
}

<h3>Edytuj dane Hodowcy</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Hodowca.SygnumHodowcy" />
            <div class="form-group mb-3">
                <label asp-for="Hodowca.Imie" class="form-label"></label>
                <input asp-for="Hodowca.Imie" class="form-control" />
                <span asp-validation-for="Hodowca.Imie" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Hodowca.Nazwisko" class="form-label"></label>
                <input asp-for="Hodowca.Nazwisko" class="form-control" readonly />
                <span asp-validation-for="Hodowca.Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-page="Index" class="ms-2">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
